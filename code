import cairo

class Segment:
    def __init__(self, h):
        self.couleur = (h/(height-1) 0, 0)
        self.A = (0, h)
        self.B = (width, h)
        
    def trace(self, ctx):
        ctx.save()
        ctx.set_source_rgb(self.couleur)
        ctx.move_to(self.A)
        ctx.line_to(self.B)
        ctx.stroke()
        ctx.restore()


# Dimensions de l'image finale
width, height = 1366, 137

# Cr√©ation d'une nouvelle image vide
img = cairo.ImageSurface(cairo.FORMAT_ARGB32, width, height)
ctx = cairo.Context(img)

# Remplir l'image avec un fond blanc (optionnel)
ctx.set_source_rgb(1, 1, 1)  # RGB blanc
ctx.paint()

for i in range(height):
    Segment(i).trace(ctx)

# Sauvegarder l'image finale
img.write_to_png("tram_tasnim.png")

